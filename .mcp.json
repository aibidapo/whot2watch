{
  "mcpServers": {
    "tmdb": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-tmdb"],
      "env": {
        "TMDB_API_KEY": "${TMDB_API_KEY}"
      },
      "lazyLoad": true
    },
    "justwatch": {
      "command": "uvx",
      "args": ["mcp-justwatch"],
      "lazyLoad": true
    }
  }
}
